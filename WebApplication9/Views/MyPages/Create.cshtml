@model WebApplication9.Models.MyPage

@{
    ViewBag.Title = "Create";
}

<h2 style="margin-left:100px">Create your Profile</h2>
<br />
<style>
    #container1 {
        margin-left: 100px;
    }

    .cc1 {
        border-top: 2px solid #182a3c;
        border-left: 1px solid #dadee8;
        border-right: 1px solid #dadee8;
        border-bottom: 1px solid #dadee8;
        border-radius: 5px;
        margin-bottom: 3em;
        padding-top: 0;
        background-color: #fff;
        width: 90%;
    }

    .bb1 {
        text-align: left;
        padding: 1em .5em .5em 2em;
        font-size: 1em;
        font-weight: 600;
    }

    #abc ul {
        list-style-type: none;
        width: 96%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #00bcb4;
    }

    #abc > ul > li {
        float: left;
        width: 20%;
    }

        #abc > ul > li > a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            border-right: 4px solid white;
        }

            #abc > ul > li > a:hover {
                background-color: #111;
            }
</style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="container1">
        <div style="height:35%;width:100%;">
            <div>
                <div style="float:left;width:13%;padding:0px;">
                    <img src="abc.jpg" height="150" width="150" />
                </div>
                <div style="margin-left:25px;height:150px;float:left;width:800px;padding-bottom:20px;">
                    <h1>Name</h1>
                </div>
                <br />
                <div id="abc" style="height:10%;">
                    <ul>
                        <li><a href="#">My Profile</a></li>
                        <li><a href="#">CV Cover Notes</a></li>
                        <li><a href="#">Job Alerts</a></li>
                        <li><a href="#">Shortlisted/Applied</a></li>
                        <li><a href="#">Companies</a></li>
                    </ul>
                </div>
            </div>
        </div>



        <br>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="cc1">
            <h3 class="bb1">Your Age</h3>
            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
        </div>

        <div class="cc1">
            <h3 class="bb1">Summary</h3>
            @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
        </div>

        <div class="cc1">
            <h3 class="bb1">Experience</h3>
            @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
        </div>

        <div class="cc1">
            <h3 class="bb1">Languages</h3>
            @Html.EditorFor(model => model.Languages, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Languages, "", new { @class = "text-danger" })
        </div>
        <div class="cc1">
            <h3 class="bb1">Skills</h3>
            @Html.EditorFor(model => model.Skills, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Skills, "", new { @class = "text-danger" })
        </div>

        <div class="cc1">
            <h3 class="bb1">Hobbies</h3>
            @Html.EditorFor(model => model.Hobbies, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Hobbies, "", new { @class = "text-danger" })
        </div>

        <br>
        <div><input type="submit" value="Create" class="btn btn-default" /></div>
    </div>
}